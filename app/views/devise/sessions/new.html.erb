<section class="sec-layout sec-devise-login">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
          <div class="form form-login">
            <div class="form__heading">Connexion</div>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form__fieldset">
                <div class="form__input form__input--full form__input--hasicon">
                  <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                  <img src="<%= asset_path 'envelope-solid.svg' %>">
                  </div>
                  
              </div>

              <div class="form__fieldset">
                <div class="form__input form__input--full form__input--hasicon">
                  <%= f.input :password,
                          required: true,
                          input_html: { autocomplete: "current-password" }, 
                          :label => 'Mot de passe' %>
                  <img src="<%= asset_path 'lock-solid.svg' %>">
                  </div>
              </div>

              <div class="form__fieldset">
                <div class="form__input form__input--full">
                  <%= f.input :remember_me, :label => 'Conserver mes accÃ¨s', as: :boolean if devise_mapping.rememberable? %>
                </div>
              </div>
              
              <div class="form__actions">
                  <%= f.button :submit, "Se connecter" %>
              </div>  
            <% end %>
            
            <div class="form__links">
              <%= render "devise/shared/links" %>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>