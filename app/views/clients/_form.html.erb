<div class="form form-create-client">
    <div class="form__heading">Nouveau client</div>
    <%= simple_form_for(@client, remote: true, html: { id: :add_client }) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <div class="form__fieldset">
            <div class="form__input form__input--full">
            <%= f.input :name, :label => "Raison sociale", required: :true %>
            </div>
        </div>

        <%= f.hidden_field :company_id, :value => current_user.company_id %>

        <div class="form__actions">
            <%= f.button :submit, :value => 'Ajouter' %>
        </div>   
    <% end %>
</div>