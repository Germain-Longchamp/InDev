<div class="header">
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <div class="logo-app">
          <a href="/">
            <span class="color-magenta">In</span><span class="color-blue">Dev</span>
          </a>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="header__actions">
        <% if user_signed_in? %>
          <nav>
            <ul>
              <li>
                <a href="">Mes projets</a>
              </li>
              <li>
                <a href="<%= edit_user_registration_path %>">Mon compte</a>
              </li>
              <li>
                <%= link_to raw('Se déconnecter'), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </nav>
          <% else %>
          <nav>
            <ul>
              <li>
                <a href="/account/sign_in">Se connecter</a>
              </li>
              <li>
                <a href="/account/sign_up">Créer un compte</a>
              </li>
            </ul>
          </nav>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


