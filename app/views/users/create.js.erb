    break;

    case ('Designer') :
    $('#renderDesignerUsers').append('<%= j render @user %>');
    $('#renderDesignerUsers').find('.info-msg').remove()
    break;

    case ('Account') :
    $('#renderAccountUsers').append('<%= j render @user %>');
    $('#renderAccountUsers').find('.info-msg').remove()
    break;

    case ('Marketing') :
    $('#renderMarketingUsers').append('<%= j render @user %>');
    $('#renderMarketingUsers').find('.info-msg').remove()
    break;

    default:
    $('#renderDeveloperUsers').append('<%= j render @user %>');
    $('#renderDeveloperUsers').find('.info-msg').remove()
}

